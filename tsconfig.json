{
  "compilerOptions": {
    "outDir": "./dist",       
    "rootDir": "./src",        
    "target": "esnext",         
    "module": "esnext",         
    "moduleResolution": "node", 
    "strict": true,             
    "esModuleInterop": true,    
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src/**/*"],      
  "exclude": ["node_modules", "dist"] 
}

